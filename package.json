{
  "name": "bitcoin-indexer",
  "version": "1.0.0",
  "description": "A Bitcoin blockchain indexer that indexes transactions, addresses, and balances",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:simple": "node dist/index-simple.js",
    "start:typeorm": "node dist/index-typeorm.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:typeorm": "ts-node-dev --respawn --transpile-only src/index-typeorm.ts",
    "test:typeorm": "ts-node-dev --respawn --transpile-only src/index-typeorm-minimal.ts",
    "clean-sync": "ts-node-dev --transpile-only src/index-clean-sync.ts",
    "demo": "node demo.js",
    "test": "jest",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/config/database.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/config/database.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/config/database.ts",
    "db:create": "createdb bitcoin_indexer",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "bitcoin-core": "^4.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17",
    "winston": "^3.10.0",
    "zeromq": "^6.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.19.0",
    "@types/pg": "^8.10.7",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "author": "Bitcoin Indexer",
  "license": "MIT"
}
